#include <stdio.h>
#include <stdlib.h>

#define MAX 10000  

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int prefix_sum = 0;
    int count = 0;
    int hash[2 * MAX + 1] = {0};

    for(int i = 0; i < n; i++) {
        prefix_sum += arr[i];

        if(prefix_sum == 0)
            count++;

        if(hash[prefix_sum + MAX] > 0)
            count += hash[prefix_sum + MAX];

        hash[prefix_sum + MAX]++;
    }

    printf("%d", count);

    return 0;
}
